#include<stdio.h>

int main(){
    int n;
    printf("Enter:\n");
    scanf("%d", &n);
    for(int i = 1; i <=n ; i++){
        for(int j = n + 3; j >= i; j--){
            printf("*");
        }
        for(int j = 0; j < 2*i - 1 ; j++){
            if(j % 2 == 0){
                printf("%d",i);
            }
            else{
                printf("*");
            }
        }
        for(int j = n + 3; j >= i; j--){
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
